<div class="card mx-auto text-center avatar-card" style='margin: 0 auto; float: none;'>
  <h2 class='card-title'><%= @user_data["username"] %></h2>
  <h2 card='card-title'> <%= @avatar["name"] %></h2>
  <h4 class='card-title'> XP: <%= @avatar["xp"] %> </h4>
  <img class="card-img-top avatar-img" src="/images/Avatar_Gifs/Worgen/Worgen_1_bow.gif" alt="avatar">


</div><br>
<div id="comment-list">
  <ul class='list-group'>
  <% @comments.each do |comment| %>
    <li class="list-item comments"><%= comment["body"] %> - Posted By: <%= @sender["username"] %></li><br>
  <% end %>
  </ul>
</div>
<div style='color: #000;'>
  <%= render :partial => '/comments/form.html.erb', locals:{user: @user_data} %>
</div>
